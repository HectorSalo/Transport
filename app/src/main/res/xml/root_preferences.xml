<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_profile">
        <PreferenceScreen
            app:key="signOut"
            app:title="@string/title_sign_out"
            app:icon="@drawable/ic_logout_24"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notification_header">

        <SwitchPreferenceCompat
            app:key="@string/notification_key"
            app:title="@string/notification_title"
            app:defaultValue="true"
            app:icon="@drawable/ic_notifications_active_24"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/assembly_header">

        <SwitchPreferenceCompat
            app:key="@string/assembly_key"
            app:title="@string/assembly_title"
            app:defaultValue="false"
            app:icon="@drawable/ic_assembly_off_24"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/text_about">

        <PreferenceScreen
            app:key="name_version"/>

    </PreferenceCategory>

</PreferenceScreen>