<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Transport" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_base_normal</item>
        <item name="colorPrimaryVariant">@color/blue_base_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_base_ligth</item>
        <item name="colorSecondaryVariant">@color/yellow_base_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo2</item>
        <item name="postSplashScreenTheme">@style/Theme.Transport</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="StyleButtonCircle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:textColor">@color/yellow_base_dark</item>
    </style>

    <style name="SpecificCornerRounded">
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="Theme.Transport.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Transport.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Transport.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for the M3 Bottom Sheet. -->
    <style name="Widget.Material3.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:elevation" tools:ignore="NewApi">8dp</item>
        <item name="marginLeftSystemWindowInsets">true</item>
        <item name="marginRightSystemWindowInsets">true</item>
        <item name="paddingBottomSystemWindowInsets">true</item>
        <item name="paddingTopSystemWindowInsets">true</item>
        <item name="paddingLeftSystemWindowInsets">false</item>
        <item name="paddingRightSystemWindowInsets">false</item>
        <item name="shapeAppearance">@macro/m3_comp_sheet_bottom_docked_container_shape</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Corner.Top</item>
        <item name="shouldRemoveExpandedCorners">false</item>
        <item name="backgroundTint">@macro/m3_comp_sheet_bottom_docked_container_color</item>
    </style>
</resources>