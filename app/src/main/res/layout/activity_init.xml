<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.init.InitActivity">

    <TextView
        android:id="@+id/tv_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/text_type_pin"
        android:gravity="center"
        android:textSize="48sp"
        android:maxLength="4"/>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pin">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="1"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="4"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button7"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="7"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button0"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                android:text="0" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="@dimen/dimen_button_pin"
                android:layout_height="@dimen/dimen_button_pin"
                style="@style/StyleButtonCircle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                app:icon="@drawable/ic_backspace_32"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/yellow_base_dark"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>